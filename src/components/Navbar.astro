---
import graaspLogo from '../images/graasp.svg';
import LanguagePicker from './LanguagePicker.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { Image } from 'astro:assets';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="pos-f-t" style={{ marginBottom: 10 }}>
  <nav class="navbar navbar-dark navbar-expand-md">
    <div class="logo-container">
      <Image class="logo" src={graaspLogo} alt="Graasp Climate logo" />
      <h4 class="logo-text">GRAASP CLIMATE</h4>
    </div>

    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div
      class="navbar-collapse collapse justify-content-end"
      id="navbarSupportedContent"
    >
      <div class="p-4">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="#">
              {t('Home')}
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#physics">
              {t('PHYSICS_SIMULATIONS_TITLE')}
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#activities">
              {t('ACTIVITIES_TITLE')}
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#team">
              {t('Team')}
            </a>
          </li>
          <li class="nav-item">
            <LanguagePicker />
          </li>
        </ul>
      </div>
    </div>
  </nav>
</div>

<style>
  .logo {
    width: 175px;
    height: auto;
    padding: 16px;
  }
</style>
